{
	"compilerOptions": {
		"outDir": "../dist",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"target": "es5",
		"module": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"]
	},
	"angularCompilerOptions": {
		"disableTypeScriptVersionCheck": true
	},
	"include": [
		"*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
